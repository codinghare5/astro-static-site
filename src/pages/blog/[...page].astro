---
// Component Imports
import Default from '../../layouts/Default.astro';
import BlogPostPreview from '../../components/BlogPostPreview.astro';
import Hero from '../../components/Hero.astro';

let title = 'Aspiedent Blog';
let description = 'See our recent activity and feel free to contact us through the social media.';

export function getStaticPaths({paginate}) {
	let allPosts = Astro.fetchContent('../posts/*.md');
	allPosts = allPosts.sort((a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());
	// For every tag, return a paginate() result.
	// Make sure that you pass `{params: {tag}}` to `paginate()`
	// so that Astro knows which tag grouping the result is for.
	return paginate(allPosts, { pageSize: 10 });
}
const { page } = Astro.props;
const permalink = page.currentPage;
const str = JSON.stringify(page.data)
const pages = Array.from(Array(page.lastPage), (e,i)=>i+1)
---
<style>
.blog-header {
	border-bottom: 1px solid var(--accent-gold-400);
}
.alice-font {
	font-family: Alice;
}
.mono {
	font-family: 'Ubuntu mono';
}
.pagination {
	border: 1px solid var(--accent-gold-400);
	border-radius: 999px;
	padding: 1rem;
}
.pagination a:focus, .pagination a:hover {
	background-color: var(--segment-purple-100);
}
div > a.hover:hover, div > a.hover:focus {
	background-color: var(--segment-purple-100) !important;
}
</style>
<Default title={title} description={description} permalink={permalink}>
	<Hero herotitle={title}>
		{description}
	</Hero>
	<h4 class="px-3 text-gray-300">/blog/{page.currentPage}</h4>
	<article>
		<section>
			{page.data.map(p => <BlogPostPreview post={p} />)}
		</section>
	</article>
	<section class="flex justify-center items-center">
		<div class="flex gap-4 pagination">
			<a href={page.url.prev === 'undefined' ? '#' : page.url.prev}>Previous</a>
			{
				pages.map(p => p === 1 ? '<a class="hover" href="/blog/">1</a>' :`<a class="hover" href="/blog/${p}">${p}</a>`)
			}
			<a href={page.url.next === 'undefined' ? '#' : page.url.next}>Next</a>
		</div>
	</section>
</Default>
