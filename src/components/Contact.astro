<style>
.tilted {
    position: relative;
    width: 100%;
    height: 300px;
    z-index: 0;
    /* background: var(--segment-green-100); */
}
.tilted:after {
    content: '';
    width: 50%;
    height: 100%;
    position: absolute;
    background: inherit;
    z-index: -1;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: bottom left;
    transform: skewY(-4deg);
}
.tilted:before {
    content: '';
    width: 50%;
    height: 100%;
    position: absolute;
    background: inherit;
    z-index: -1;
    top: 0;
    right: 0;
    bottom: 0;
    left: 50%;
    transform-origin: top right;
    transform: skewY(4deg);
    /* transform: rotateY(180deg); */
}
button.action {
    color: #c99b40;
    font-weight: 500;
    background-color: white;
    border: 1px solid #49326b;
    border-radius: 3px;
    padding: 0.5rem;
}
button.action:focus, button.action:hover {
    color: #d6b471;
    background-color: #49326b;
    border: 1px solid white;
    transform: scale(1.01618);
}
