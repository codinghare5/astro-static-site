<style lang="scss">
.company {
	font-family: 'Alice', sans-serif;
    line-height: inherit;
}
.title {
	font-size: 0.75rem;
	line-height: 1rem;
	letter-spacing: 0.05em;
	word-spacing: 0.2em;
}
.links li a {
	line-height: 1rem;
	padding-inline: 1.75rem;
}

.nav {

	&__toggle {
		position: absolute;
		cursor: pointer;
		margin-inline: 0.5rem;
		right: 0.5rem;
        top: 0.5rem;

		svg {
			width: 1.5rem;
			fill: purple;
		}

		.close {
			display: none;
		}

		.menu {
			margin-top: 0.2rem;
		}
	}

	&__checkbox {
		display: none;
	}

	&__menu {
		display: flex;
		flex-direction: column;
		align-items: center;

		li {
            list-style: none;
			display: none;
		}

        li:first-of-type {
            padding-top: 0.75rem;
        }

        li:last-of-type {
            padding-bottom: 0.75rem;
        }

		a {
			color: inherit;
            text-decoration: none;
			border: none;
		}

	}
}

// Toggle the hamburger menu in mobile view
#nav__checkbox:checked ~ ul.nav__menu li {
	display: inline-block;
}

//Change from menu to close icon on tap
#nav__checkbox:checked ~ label.nav__toggle .close {
	display: block;
}

#nav__checkbox:checked ~ label.nav__toggle .menu {
	display: none;
}

// Desktop view
@media only screen and (min-width: 768px) {
  .nav {
    &__toggle {
		display: none;
    }

    &__menu {
		flex-direction: row;

		li {
			display: block;

            &:first-of-type {
                padding-top: 0;
            }

            &:last-of-type {
                padding-bottom: 0;
            }

            &:first-child > a {
                }

			&:not(:first-child) > a {
				padding-inline: 1.25rem;
				border-left: 1px solid var(--accent-gold-400);
			}

            a:hover {
                font-weight: 500;
            }
		}

    }
  }
}

@media only screen and (min-width: 1024px) {
    .nav {
        &__menu {
            li {
                &:not(:first-child) > a {
                    padding-inline: 1.75rem;
                }
            }
        }
    }
}

:global(.original-purple) {
