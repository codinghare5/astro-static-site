---
export interface Props {
  heading: string;
}
const { heading } = Astro.props;
---
<style>
.down {
    position: relative;
    width: 100%;
    height: 400px;
    z-index: 0;
}

.down:after {
    content: '';
    width: 50%;
    height: 100%;
    position: absolute;
    background: var(--segment-green-100);
    border-radius: 0 0.375rem 0.375rem 0;
    z-index: -1;
    top: 0;
    right: 0;
    bottom: 0;
    left: 50%;
    transform-origin: top left;
    transform: skewY(-4deg);
    box-shadow: inset 0 12px 9px -10px rgba(0, 0, 0, 0.4);
}

.down:before {
    content: '';
    width: 50%;
    height: 100%;
    position: absolute;
    background: var(--segment-green-100);
    border-radius: 0.375rem 0 0 0.375rem;
    z-index: -1;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: bottom right;
    transform: skewY(4deg);
    box-shadow: inset 0 12px 10px -10px rgba(0, 0, 0, 0.4);
}
</style>
<article class="down flex justify-center">
    <section class="up flex flex-col justify-center items-center">
        <h3 class="text-xl font-medium my-3">{ heading }</h3>
        <div class="max-w-screen-sm mx-3">
            <slot/>
        </div>
    </section>
</article>