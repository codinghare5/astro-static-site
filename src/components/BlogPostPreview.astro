---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<article class="post-preview">
  <header>
    <h3 class="publish-date">{post.date}</h3>
    <a href={post.url}><h1 class="title">{post.title}</h1></a>
  </header>
  <main>
    <p>{post.description}</p>
    <a href={post.url}>Read more</a>
  </main>
</article>

<style>
.content :global(main > * + *) {
  margin-top: 1rem;
}

.post-preview {
  padding-bottom: 2rem;
  margin-bottom: 2rem;
  border-bottom: 1px solid var(--accent-gold-300);
}

header {
  display: flex;
  flex-direction: column;
  text-align: left;
  align-items: flex-start;
  justify-content: center;
  padding-bottom: 2rem;
}

.title,
.author,
.publish-date {
  margin: 0;
}

.publish-date,
.author {
  font-size: 1rem;
}

.author {
    color: var(--segment-purple-400);
}

.publish-date {
    font-family: 'Ubuntu mono', monospace;
}

.title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--segment-purple-400);
}

main a {
    display:block;
    border-radius: 3px;
    max-width: fit-content;
    color: var(--accent-gold-400);
    padding: 0.5rem;
    margin-block: 0.5rem;
    border: 1px solid var(--accent-gold-400);
    background-color: var(--segment-purple-500);
}
main a:focus, main a:hover {
    display:block;
    border-radius: 3px;
    color: var(--accent-gold-300);
    padding: 0.5rem;
    margin-block: 0.5rem;
    border: 1px solid var(--accent-gold-400);
    background-color: var(--segment-purple-400);
}
</style>
