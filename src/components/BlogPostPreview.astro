---
export interface Props {
  post: any;
}

const { post } = Astro.props;
const postClass = `${post.segment} post-preview`
---
<style>
.content :global(main > * + *) {
	margin-top: 1rem;
}

.post-preview {
	padding-bottom: 2rem;
	margin-bottom: 2rem;
	position: relative;
	z-index: 0;
}

.post-preview:first-of-type {
	margin-top: 3rem;
}

.post-preview::before {
	content: '';
	position: absolute;
	z-index: -1;
	width: 50%;
	height: 100%;
    border-radius: 0.375rem 0 0 0.375rem;
	top: -2rem;
	right: 0;
	bottom: 0;
	left: 0;
	transform-origin: top right;
	transform: skewY(-4deg);
}

.post-preview::after {
	content: '';
	position: absolute;
	z-index: -1;
	width: 50%;
	height: 100%;
    border-radius: 0 0.375rem 0.375rem 0;
	top: -2rem;
	right: 0;
	bottom: 0;
	transform-origin: top left;
	transform: skewY(4deg);
}

header {
	display: flex;
	flex-direction: column;
	text-align: left;
	align-items: flex-start;
	justify-content: center;
	padding-bottom: 2rem;
}

.title,
.author,
.publish-date {
 	margin: 0;
}

.publish-date,
.author {
	font-size: 1rem;
}

.author {
	color: var(--segment-purple-400);
}

.publish-date {
	font-family: 'Ubuntu mono', monospace;
}

.title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--segment-purple-400);
}

article a:focus, article a:hover {
	display:block;
	height: 100%;
	width: 100%;
}

.diagnosis.post-preview::after, .diagnosis.post-preview::before{
    background-color: var(--segment-blue-100);
}

.careers.post-preview::after, .careers.post-preview::before{
    background-color: var(--segment-green-100);
}

.education.post-preview::after, .education.post-preview::before{
    background-color: var(--segment-red-100);
}

.employers.post-preview::after, .employers.post-preview::before{
    background-color: var(--segment-purple-100);
}

button.action {
    color: var(--accent-gold-200);
    font-weight: 500;
    border: 1px solid var(--accent-gold-200);
    padding-block: 0.5rem;
    padding-inline: 1rem;
}
button.action:focus, button.action:hover {
    color: var(--accent-gold-200);
    border: 1px solid var(--accent-gold-200);
    transform: scale(1.01618);
}
</style>
<article class={postClass}>
	<a href={post.url}>
		<div>
			<header>
				<h3 class="publish-date">{post.date}</h3>
				<h1 class="title">{post.title}</h1>
			</header>
			<main>
				<p>{post.description}</p>
			</main>
		</div>
	</a>
</article>
