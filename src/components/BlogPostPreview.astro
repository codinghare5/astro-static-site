---
export interface Props {
  post: any;
}

const { post } = Astro.props;
const postClass = `${post.segments} post-preview`
---
<style>
.content :global(main > * + *) {
	margin-top: 1rem;
}

.post-preview {
	padding-bottom: 2rem;
	margin-bottom: 2rem;
	position: relative;
	z-index: 0;
}

.post-preview:first-of-type {
	margin-top: 3rem;
}

.post-preview::before {
	content: '';
	position: absolute;
	z-index: -1;
	width: 50%;
	height: 100%;
    border-radius: 0.375rem 0 0 0.375rem;
	top: -2rem;
	right: 0;
	bottom: 0;
	left: 0;
	transform-origin: top right;
	transform: skewY(-4deg);
}

.post-preview::after {
	content: '';
	position: absolute;
	z-index: -1;
	width: 50%;
	height: 100%;
    border-radius: 0 0.375rem 0.375rem 0;
	top: -2rem;
	right: 0;
	bottom: 0;
	transform-origin: top left;
	transform: skewY(4deg);
}

header {
	display: flex;
	flex-direction: column;
	text-align: left;
	align-items: flex-start;
	justify-content: center;
}

.title,
.author,
.publish-date {
 	margin: 0;
}

.publish-date,
.author {
	font-size: 1rem;
}

.author {
	color: var(--segment-purple-400);
}

.publish-date {
	font-family: 'Ubuntu mono', monospace;
}

.title {
  font-size: 1.5rem;
  line-height: 1.5rem;
  font-weight: 700;
  color: var(--segment-purple-400);
}

.diagnosis.post-preview::after, .diagnosis.post-preview::before{
    background-color: var(--segment-blue-100);
}

.careers.post-preview::after, .careers.post-preview::before{
    background-color: var(--segment-green-100);
}

.education.post-preview::after, .education.post-preview::before{
    background-color: var(--segment-red-100);
}

.employers.post-preview::after, .employers.post-preview::before{
    background-color: var(--segment-purple-100);
}

article a div img {
    border-radius: 3px;
    border: 3px solid white;
}
@media screen and (max-width: 640px) {
    div.thumbnail {
        transform: scale(1.5);
        padding-block: 1rem;
        margin-bottom: 1rem;
    }
}
</style>
<article class={postClass}>
	<a href={post.url}>
        <div class="grid gap-2 p-3 sm:grid-cols-5 mobile:grid-cols-1 sm:place-items-start place-items-center">
            <div class="thumbnail sm:col-start-1 sm:col-end-2 sm:row-start-1 sm:row-end-2 mobile:col-span-1 mobile:row-start-1 mobile:row-end-2">
                <img src={post.thumbnail} />
            </div>
            <div class="sm:col-start-2 sm:col-end-6 sm:row-start-1 sm:row-end-2 mobile:col-span-1 mobile:row-start-2 mobile:row-end-3">
                <header>
                    <h1 class="title">{post.title}</h1>
                    <h3 class="publish-date">{post.date}</h3>
                </header>
            </div>
            <div class="sm:col-start-1 sm:col-end-6 mobile:col-span-1 mobile:row-start-3 mobile:row-end-4">
                <main>
                    <p>{post.description}</p>
                </main>
            </div>
        </div>
	</a>
</article>
