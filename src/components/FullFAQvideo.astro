---
const { content } = Astro.props;
---
<style>
.bg-grey {
    background-color: var(--segment-green-100);
}
.video-container {
	position: relative;
	width: 100%;
	overflow: hidden;
	padding-top: 56.25%;
}
.responsive-iframe {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	width: 100%;
	height: 100%;
	border: none;
}
hr {
	width: 80%;
	margin-inline: auto;
}
</style>
<div class="my-8">
	<article class="bg-grey py-4 flex flex-col justify-center rounded-md">
		<section class="m-3 w-100 h-auto">
			<div class="mb-3"><b>Full FAQ YouTube video</b></div>
			<p>
                <slot />
			</p>
		</section>
		<section class="m-3 w-100 h-auto">
			<div class="video-container">
				<iframe class="responsive-iframe" src="https://www.youtube.com/embed/_svJZN9Zj_I" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			</div>
		</section>
	</article>
</div>
