---
const fullprofiletitle = 'Redy to start your full neurodiversity profile?'
---
<style>
.tilted {
    position: relative;
    width: 100%;
    height: 400px;
    z-index: 0;
    background: rgba(250, 238, 233, 0.1);
}

.tilted:after {
    content: '';
    width: 100%;
    height: 80%;
    position: absolute;
    background: rgba(250, 238, 233, 1);
    z-index: -1;
    top: 20%;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: bottom left;
    transform: skewY(-4deg);
}

.tilted:before {
    content: '';
    width: 100%;
    height: 80%;
    position: absolute;
    background: rgba(250, 238, 233, 1);
    z-index: -1;
    top: 20%;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: bottom right;
    transform: skewY(4deg);
}
button.action2 {
    color: #c99b40;
    font-weight: 500;
    background-color: #49326b;
    border: 1px solid #c99b40;
    padding: 0.5rem;
}
button.action2:focus, button.action2:hover {
    color: #d6b471;
    background-color: white;
    border: 1px solid #d6b471;
    transform: scale(1.01618);
}
</style>
<article class="tilted flex flex-col justify-center items-center">
    <section class="flex flex-col justify-center items-center py-20">
        <h3 class="text-lg font-medium my-4">{fullprofiletitle}</h3>
        <button class="action2">Click here to book one</button>
    </section>
</article>