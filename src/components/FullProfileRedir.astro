---
const fullprofiletitle = 'Redy to start your full neurodiversity profile?'
---
<style>
.tilted {
    position: relative;
    width: 100%;
    height: 400px;
    z-index: 0;
    /* background: var(--segment-red-100); */
}

.tilted:after {
    content: '';
    width: 100%;
    height: 80%;
    position: absolute;
    border-radius: 0.375rem;
    z-index: -1;
    top: 20%;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: bottom left;
    transform: skewY(-4deg);
}

.tilted:before {
    content: '';
    width: 100%;
    height: 80%;
    position: absolute;
    border-radius: 0.375rem;
    z-index: -1;
    top: 20%;
    right: 0;
    bottom: 0;
    left: 0;
    transform-origin: bottom right;
    transform: skewY(4deg);
}

button.action2 {
    color: var(--accent-gold-100);
    font-weight: 500;
    background-color: var(--segment-purple-500);
    border: 1px solid var(--accent-gold-100);
    border-radius: 3px;
    padding: 0.5rem;
}

button.action2:focus, button.action2:hover {
    color: var(--accent-gold-400);
    background-color: white;
    border: 1px solid var(--accent-gold-400);
    transform: scale(1.01618);
}
</style>
<article class="tilted flex flex-col justify-center items-center">
    <section class="flex flex-col justify-center items-center py-20">
        <h3 class="text-lg font-medium my-4">{fullprofiletitle}</h3>
        <button class="action2">Click here to book one</button>
    </section>
</article>