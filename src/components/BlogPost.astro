---
import Author from './Author.astro';

export interface Props {
	title: string;
	author: string[];
	authorImage: string[];
	date: string;
	image: string;
	alt: string;
    segmentColor: string;
}
const { content } = Astro.props;
const { title, author, authorImage, date, image, alt, segmentColor } = Astro.props;
const segmentBgStyle = `background-color: var(--segment-${segmentColor}-100);`
---
<style>
header {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-bottom: 2rem;
}
article div header img.hero-image {
	width: 100%;
	height: auto;
    border-radius: 0.375rem;
}
.authors-container {
	position: relative;
	top: -3rem;
}
.authors {
    display: flex;
    justify-content: center;
}
/* main {
    background-color: var(--segment-purple-100);
} */
.publish-date {
    font-family: 'Ubuntu mono';
    font-size: small;
}
</style>

<div>
	<article>
		<div>
			<header>
				{image && <img class="hero-image" loading="lazy" src={image} alt={alt} />}
				<div class="authors-container">
                    <div class="authors">
                        {author.map((a, index) => <Author name={a} href="https://twitter.com/" authorImage={authorImage[index]}/>)}
                    </div>
					<h1 class="title text-4xl font-semibold mb-4">{title}</h1>
					<p class="publish-date">{date}</p>
				</div>
			</header>
			<main class="tilted flex justify-center" style={segmentBgStyle}>
				<slot />
			</main>
		</div>
	</article>
</div>
