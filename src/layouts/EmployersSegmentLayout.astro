---
import Segment from '../components/Segment.astro'
import Benefits from '../components/Benefits.astro'
import SampleProfile from '../components/SampleProfile.astro'
import FullProfileRedir from '../components/FullProfileRedir.astro'

const { herotitle = 'Employers', heading = 'Benefits of Autism Profile' } = Astro.props;
const benefits = [`Intro text content (list of benefits and bullet points can go here) - 
            Lorem ipsum dolor sit amet consectetur adipisicing elit. 
            Delectus amet asperiores exercitationem tenetur nostrum totam unde enim, accusantium voluptas aperiam.`]
const heroSubtitle = 'Autistic or neurodiversed employee? Find out his/her best self!'
const sampleProfileHeading = 'Want to try a sample neurodiversity profile?'
const herobackgroundCSS = 'background-color: var(--segment-purple-400)'
---
<Segment herotitle={herotitle} bgcolor={herobackgroundCSS}>
	{ heroSubtitle }
</Segment>
<Benefits heading={heading}>
    { benefits }
</Benefits>
<SampleProfile sampleProfileHeading={sampleProfileHeading}/>
<FullProfileRedir/>