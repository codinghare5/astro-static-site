---
import Default from './Default.astro';
import HeroImage from '../components/HeroImage.astro';
import ContactSection from '../components/ContactSection.astro';
import ContactForm from '../components/ContactForm.astro';

const { content } = Astro.props;
const {title, description, permalink} = content;
---
<style>
section.post {
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
	justify-content: center;
	background-color: white;
}
li { 
	display: flex;
}
ul, ol { padding-inline: 1rem !important; }
</style>
<Default title={title} description={description} permalink={permalink}>
	<HeroImage herotitle={content.heroTitle} heroImage={content.heroImage}>
	</HeroImage>
	<article class="w-100 flex justify-center align-center bg-white py-8 my-8">
		<section class="post max-w-screen-sm mx-3 p-3">
			<slot />
		</section>
	</article>
    <ContactForm/>
	<ContactSection/>
</Default>