---
import Segment from '../components/Segment.astro'
import Benefits from '../components/Benefits.astro'
import Faq from '../components/Faq.astro'
import SampleProfile from '../components/SampleProfile.astro'
import FullProfileRedir from '../components/FullProfileRedir.astro'

export interface Props {
    heroTitle: string;
    heroSubtitle: string;
    benefitsHeading: string;
    sampleProfileHeading: string;
    segmentColor: string;
    picture: string;
}

const { heroTitle, heroSubtitle, benefitsHeading, sampleProfileHeading, segmentColor, picture } = Astro.props;
---
<Segment herotitle={heroTitle} bgcolor={segmentColor}>
	{ heroSubtitle }
</Segment>
<Benefits heading={benefitsHeading} picture={picture}>
    <slot />
</Benefits>
<SampleProfile sampleProfileHeading={sampleProfileHeading} segmentColor={segmentColor}/>
<Faq/>
<FullProfileRedir/>